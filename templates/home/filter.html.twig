{{ form_start(filter) }}
<div class="accordion mb-4" id="accordionSearch">
    <div class="accordion-item">
        <h2 class="accordion-header" id="headingOne">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                Панель инструментов
            </button>
        </h2>
        <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionSearch">
            <div class="accordion-body">
                <div class="row">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-8">
                                <div class="col-12 col-lg-10" id="filter_start">{{ form_row(filter.url) }}</div>
                            </div>
                            <div class="col-2">
                                <button class="col-12 col-lg-10 btn btn-secondary" id="button-to-loader" type="submit">Go!</button>
                            </div>
                            <div class="col-2">{{ form_row(filter.clear) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{ form_end(filter) }}
